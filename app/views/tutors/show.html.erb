<h1><%= @tutor.name %></h1>

<h3>Upcoming First Sessions (remember to submit these hours too):</h3>

<% if @tutor_first_sessions.empty? %>
	(No upcoming sessions with new students)
<% else %>
<table id = "inbox_question_list", class="display">
	<thead>
		<tr>
			<th>Student Name</th>
			<th>Parent Name</th>
			<th>Grade</th>
			<th>Subject</th>
			<th>Date</th>
			<th>Time</th>
			<th>Student Address</th>
			<th>Student Phone Number</th>
			<th>Notes for session</th>
		</tr>
		</thead>

		<tbody>
		<% for session in @tutor_first_sessions %>
		<% student = Student.find(session.student_id) %>
		<tr>
			<td><%= student.student_name %></td>
			<td><%= student.parent_name %></td>
			<td><%= student.grade %></td>
			<td>

					<% for course in student.courses %>
						<li><%= course %></li>
					<% end %>

			</td>
			<td><%= session.date %></td>
			<td><%= session.time %></td>
			<td><%= student.address %></td>
			<td><%= student.primary_phone %></td>
			<td><%= session.tutor_notes %></td>	
		</tr>
		<% end %>
	</tbody>
	</table>
</div>	

<% end %>

